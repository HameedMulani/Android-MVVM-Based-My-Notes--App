<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="@color/white" />
            <corners android:radius="7dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:end="3px">

        <shape  android:shape="rectangle">

            <solid android:color="#795548" />
            <corners android:radius="7dp" />


        </shape>

    </item>
</layer-list>
